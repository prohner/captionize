<div class="caption"
<% if caption == @current_caption %>
	id="current_caption"
<% end %>
>
	<span class="caption_headline">
		<%=h caption.headline %>
	</span>

	<span class="caption_user">
		Suggested by <%=h caption.user.name %>
	</span>
	<span class="caption_detail_info">
		<%=h did_when(caption.created_at) %>
	</span>

<table style="display:inline;">	
<tr>
<td>
	<% form_remote_tag :url => { :action => 'caption_vote', :id => caption.id, :u => 'y' } do %>
		<%= image_submit_tag "up.png" %>
	<% end %>
	<span class="caption_vote_count" id="up_vote_count_<%= caption.id %>">
	(<%=h caption.count_of_up_votes %>)
	</span>
</td>	
<td>
	<% form_remote_tag :url => { :action => 'caption_vote', :id => caption.id, :u => 'n' } do %>
		<%= image_submit_tag "down.png" %>
	<% end %>
	<span class="caption_vote_count" id="down_vote_count_<%= caption.id %>">
	(<%=h caption.count_of_down_votes %>)
	</span>
</td>
</tr>
</table>
</div>
