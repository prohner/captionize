<h1>New picture</h1>

<%= error_messages_for("picture") %>

<% form_for(@picture,
				:url => { :action => 'add_new_picture' },
				:html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Picture to upload" %><br />
    <%= f.file_field :picture_data %>
  </p>
  <p>
    <%= f.label "Initial headline" %><br />
    <%= f.text_field :headline %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id, :value => session[:username] %>
  </p>
  <p>
    <%= f.submit 'Add My New Picture' %>
  </p>
<% end %>

<%= link_to 'Back', pictures_path %>